# Telegram bot (from @BotFather)
TELEGRAM_BOT_TOKEN=123456:ABC-DEF...

# Local LLM (Ollama)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=gemma3:4b

# Optional: give model access to internet via web_search / web_fetch tools (agent loop)
# Requires free API key from https://ollama.com/settings/keys and a tool-capable model.
# Use qwen3:latest or qwen3:4b (gemma3 may not support tools in Ollama).
OLLAMA_API_KEY=
ENABLE_WEB_TOOLS=false

# Use Telegram MCP for chat history (true) or local MySQL (false). Default false = MySQL, faster.
USE_TELEGRAM_MCP=false

# When USE_TELEGRAM_MCP=true: path to telegram-mcp repo (app runs: uv --directory <path> run main.py)
# TELEGRAM_MCP_PATH=C:\path\to\telegram-mcp

# MySQL for local chat history (when USE_TELEGRAM_MCP=false)
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=root
MYSQL_PASSWORD=
MYSQL_DATABASE=telegram_bot

# How many recent messages to include as context (default 100)
CHAT_HISTORY_LIMIT=100

# Optional: only reply when the bot is @mentioned (e.g. in groups)
# TELEGRAM_TRIGGER_ON_MENTION=true

# RAG with semantic search (Advanced)
# Enables semantic search over chat history using embeddings and Qdrant vector database
ENABLE_RAG=false
QDRANT_URL=http://localhost:6333
QDRANT_COLLECTION_NAME=chat_chunks
OLLAMA_EMBEDDING_MODEL=nomic-embed-text
RAG_CHUNK_SIZE=8
RAG_RECENT_MESSAGES=10
RAG_SIMILAR_LIMIT=15

PORT=3000
