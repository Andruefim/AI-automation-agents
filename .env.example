# Telegram bot (from @BotFather)
TELEGRAM_BOT_TOKEN=123456:ABC-DEF...

# Local LLM (Ollama)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.2

# Telegram MCP server for chat history (optional; if unset, replies use only the current message)
# Option A: path to telegram-mcp repo (app runs: uv --directory <path> run main.py)
TELEGRAM_MCP_PATH=C:\path\to\telegram-mcp
# Option B: custom command and args (comma-separated)
# TELEGRAM_MCP_COMMAND=uv
# TELEGRAM_MCP_ARGS=--directory,C:\path\to\telegram-mcp,run,main.py

# Optional: how many recent messages to include as context (default 40)
# CHAT_HISTORY_LIMIT=40

# Optional: only reply when the bot is @mentioned (e.g. in groups)
# TELEGRAM_TRIGGER_ON_MENTION=true

PORT=3000
